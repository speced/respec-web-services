{
  "name": "respec.org",
  "version": "1.0.0",
  "description": "respec.org website and HTTP APIs",
  "main": "app.js",
  "repository": "git@github.com:marcoscaceres/respec.org.git",
  "author": "Marcos Caceres <marcos@marcosc.com>",
  "type": "module",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "morgan": "^1.10.0",
    "nanoid": "^3.1.31",
    "node-fetch": "^3.0.0",
    "serialize-error": "^8.1.0",
    "split2": "^4.0.0",
    "ucontent": "^2.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "prestart": "npm run update-data-sources && npm run regenerate-docs",
    "start": "node --enable-source-maps build/app.js",
    "start:server": "pm2 start ecosystem.config.cjs --env production",
    "test": "jasmine --config=tests/jasmine.json",
    "regenerate-docs": "node --trace-warnings ./build/scripts/regenerate-docs.js",
    "update-data-sources": "node build/scripts/update-data-sources.js"
  },
  "simple-git-hooks": {
    "post-merge": "npm ci && npm run build"
  },
  "prettier": {
    "singleQuote": false,
    "trailingComma": "all",
    "arrowParens": "avoid"
  },
  "jest": {
    "testRegex": "/tests/.*\\.test\\.js$",
    "collectCoverageFrom": [
      "build/**"
    ],
    "coverageProvider": "v8",
    "transform": {}
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.0",
    "@types/split2": "^3.2.1",
    "jasmine": "^3.10.0",
    "simple-git-hooks": "^2.6.1",
    "typescript": "^4.4.4"
  }
}
